<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Get a free insurance quote!</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("GetQuote", "Home", FormMethod.Post))
            {
            <div class="row no-gutters">
                <div class="form-group col-md-12">
                    <input name="FirstName" type="text" class="form-control" placeholder="First Name" />
                </div>
                <div class="form-group col-md-12">
                    <input name="LastName" type="text" class="form-control" placeholder="Last Name" />
                </div>
                <div class="form-group col-md-12">
                    <input name="EmailAddress" type="email" class="form-control" placeholder="Email" />
                </div>
                <div class="form-group col-md-12">
                    <input name="DateOfBirth" type="date" class="form-control" placeholder="Date Of Birth - month/day/year" />
                </div>
                <div class="form-group col-md-12">
                    <input name="CarYear" type="number" class="form-control" placeholder="Car Year" />
                </div>
                <div class="form-group col-md-12">
                    <input name="CarMake" type="text" class="form-control" placeholder="Car Make" />
                </div>
                <div class="form-group col-md-12">
                    <input name="CarModel" type="text" class="form-control" placeholder="Car Model" />
                </div>
                <div class="form-group col-md-12">
                    <input name="HadDUI" type="text" class="form-control" placeholder="Have you ever had a DUI? - Yes or No" />
                </div>
                <div class="form-group col-md-12">
                    <input name="NumOfTickets" type="number" class="form-control" placeholder="Number of speeding tickets" />
                </div>
                <div class="form-group col-md-12">
                    <input name="CoverageOption" type="text" class="form-control" placeholder="Full Coverage or Liability Coverage" />
                </div>
                <button type="submit" class="btn btn-block btn-primary">Submit</button>
            </div>
            }
        </div>
    </div>
</div>